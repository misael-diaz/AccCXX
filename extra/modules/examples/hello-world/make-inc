# installation path of compilers
INSTDIR = /opt/gcc/gcc-11.1.0/bin

# compilers
FC      = $(INSTDIR)/gfortran
CXX     = $(INSTDIR)/g++

# options
FCOPT   = -cpp
CXXOPT  = -fmodules-ts

# libraries
LIBS    =

# headers
HEADER  =

# sources
MOD     = module-hello.cpp
MAIN    = main.cpp

# objects
MOD_O   = hello.o
MAIN_O  = main.o
OBJECTS = $(MOD_O) $(MAIN_O)

# executables
EXEC    = hello-world

# gcm cache
GCM_CACHE = gcm.cache
