## compiler

CXX = g++

# enables optimizations
CXXOPT = -O2

# debugging options
CXXOPT = -g -Wall -Wextra -O0


## source files

# main
MAIN_CXX = LinkedList.cpp


## objects
MAIN_OBJ = LinkedList.o

OBJECTS = $(MAIN_OBJ)


## executables
MAIN_BIN = test-linked-list.bin
ALL = $(MAIN_BIN)
